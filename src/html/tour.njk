{# Include header #}
{% include 'includes/header_mini.njk' %}

	<!-- Start main -->
	<main class="accent-background">

    <!-- Google maps -->
    <section class="map" id="map">
    </section>

    <!-- List with days -->
    <section class="days container swiper-container">
      <div class="days__wrapper swiper-wrapper">
        {# Start cycle #}
        {% for i in range(1, 50) %}
          <div class="button button_shadow {% if loop.index == 1 %}active{% endif %} swiper-slide"><div class="button__title">День-{{i}}</div></div>
        {% endfor %}
        {# End cycle #}
      </div>
    </section>

    <!-- Start location section -->
    <section class="location container">
      <!-- Title -->
      <h2 class="h2">Локации тура</h2>

      <!-- Start location cards list -->
      <div class="location-cards-list">

        {# Start cycle #}
        {% for item in location_cards %}
          <!-- Card -->
          <div class="location-card">

            <!-- Image -->
            <img class="location-card__image" src="/img/{{item.img}}" alt="location">

            <!-- Title wrapper -->
            <div class="location-card__title-wrapper">
              <!-- Title -->
              <h3 class="location-card__title">
                <!-- Location name -->
                <span>{{ item.location_name }}</span>
                <!-- Location country -->
                <span>{{ item.country }}</span>
              </h3>
              <!-- Arrow right -->
              <svg class="location-card__icon" width="8" height="13" viewBox="0 0 8 13" xmlns="http://www.w3.org/2000/svg"><path d="M7.87931 6.10527L3.64442 0.196182C3.55407 0.0709096 3.42797 5.99365e-07 3.29433 5.75999e-07L0.471073 8.2365e-08C0.285679 4.99496e-08 0.117224 0.137091 0.0409958 0.349818C-0.0342912 0.563727 -0.00323531 0.813091 0.120988 0.985636L4.07261 6.5L0.120986 12.0132C-0.0032373 12.1869 -0.0352343 12.4363 0.0409937 12.649C0.117222 12.8629 0.285676 13 0.47107 13L3.29433 13C3.42796 13 3.55407 12.9279 3.64441 12.805L7.87931 6.89591C8.04023 6.67136 8.04023 6.32864 7.87931 6.10527Z"/></svg>
            </div>
          </div>
          {# End card #}
        {% endfor %}
        {# End cycle #}
      </div>
