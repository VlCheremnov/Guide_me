			<!-- Types of tour -->
			<div class="type-tour container">
        {# Cycle of tours #}
				{% for item in types %}
          <!-- Type -->
          <div class="type-tour__item field field_shadow {% if loop.index == 1 %}active{% endif %}">
            <div class="field__wrapper">
              <div class="field__content">{{ item }}</div>
            </div>
          </div>
          {# End type #}
				{% endfor %}
        {# End cycle #}
